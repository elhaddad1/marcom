@model IEnumerable<adminmarcom.Models.DAL.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/templatescripts/js/table/jQuery.dataTables.rowReordering.js")" type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $('#myDataTable').dataTable({"bJQueryUI": true,"sPaginationType": "full_numbers"}).rowReordering({ sURL: "/Departments/UpdateOrder" });
      });
        </script>

<div class="box round first">
<h2>Index</h2>
<div class="block">
                    <table id="myDataTable" class="display">
					<thead>
    <tr>
    <th>
    <a  href="@Url.Action( "Create","News")"><span></span>Create New</a>
    </th>
        <th>
             Name English
        </th>
        <th>
             Name Arabic
        </th>
        <th>
             Note English
        </th>
        <th>
             Note Arabic
        </th>
        <th></th>
    </tr>
					</thead>
                    <tbody>
@foreach (var item in Model) {
    <tr>
    <td></td>
        <td>
            @Html.DisplayFor(modelItem => item.News_Title_Eng)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.News_Title_Ar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.News_Desc_Eng)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.News_Desc_Ar)
        </td>
        <td>
        <a href="@Url.Action("Edit", "News", new { id = item.News_id })"><span></span>Edit</a> |
            <a  href="@Url.Action("Delete", "News", new { id = item.News_id })"><span></span>Remove</a>
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
<script type="text/javascript">

    $('.datatable').dataTable({"bJQueryUI": true,"sPaginationType": "full_numbers"});
    </script>