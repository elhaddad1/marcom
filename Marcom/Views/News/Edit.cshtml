@model adminmarcom.Models.NewsModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
  <script type="text/javascript">
      $(document).ready(function () {
          $("#date-picker").datepicker();
      });
        </script>
@using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="box round first">
        <h2>Edit News</h2>
        <div class="block">
        <table id="tableId" cellpadding="10" cellspacing="10" width="100%" style="border-collapse: collapse;">
         <tr>
            <td class="tableTDcls">
            News Name (English) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.EditorFor(model => model.News_Title_Eng)
            @Html.ValidationMessageFor(model => model.News_Title_Eng)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            News Name (Arabic) *
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.EditorFor(model => model.News_Title_Ar)
            @Html.ValidationMessageFor(model => model.News_Title_Ar)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            News Note (English)
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.News_Desc_Eng)
            @Html.ValidationMessageFor(model => model.News_Desc_Eng)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            News Note (Arabic)
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextAreaFor(model => model.News_Desc_Ar)
            @Html.ValidationMessageFor(model => model.News_Desc_Ar)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">
            News From
            </td>
            <td class="tableTDcls"></td>
            <td class="tableTDcls">
            @Html.TextBoxFor(model => model.News_Datetime, new { @id = "date-picker" })
            @Html.ValidationMessageFor(model => model.News_Datetime)
            </td>
        </tr>
        <tr>
        <td class="tableTDcls">Select Image *</td>
            <td class="tableTDcls"></td>
        <td class="tableTDcls">
        @Html.TextBoxFor(m => m.Image_Path, new { type = "file" })
            @Html.ValidationMessageFor(model => model.Image_Path)
        </td>
        </tr>
        </table>
        <p>
            <input type="submit" value="Create"  class="btn btn-blue"/>
        </p>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
   </div>
   </div>
}

